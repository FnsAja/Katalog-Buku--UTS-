<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:text="Help"
            android:textColor="@color/white"
            android:textSize="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewHelp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="12dp"
            android:fontFamily="@font/roboto_light"
            android:text="Contact Us On.... "
            android:textColor="@color/grey"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="150dp"
            android:layout_below="@id/textViewHelp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnEmailHelp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_below="@id/textViewHelp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnTeleponHelp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/telepon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="150dp"
            android:layout_below="@id/textViewHelp"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnWebHelp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/browser"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>